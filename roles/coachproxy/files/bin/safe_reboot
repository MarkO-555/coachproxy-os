LOG=/coachproxy/bin/cplog.sh
SCRIPT=$(basename $0 .sh)

send_message() {
  echo $(date +%F\ %T) "$1"
  timeout 2 /usr/local/bin/mqtt-simple -h localhost -p "GLOBAL/SHUTDOWN" -r -m "$1"
}

$LOG "$SCRIPT rebooting..."
send_message "Reboot: Rebooting now..."
sleep 1
/sbin/fake-hwclock save
shutdown -r now
